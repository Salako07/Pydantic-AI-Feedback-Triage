# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017

# LLM Configuration
# Supported formats:
# - openai:gpt-4o (OpenAI)
# - anthropic:claude-3-5-sonnet-20241022 (Anthropic)
# - gemini-1.5-pro (Google Gemini)
LLM_MODEL=openai:gpt-4o

# API Keys (provide at least one based on LLM_MODEL)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Application Configuration
FASTAPI_PORT=8000
FRONTEND_PORT=5173

# Frontend API URLs (for local development)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Phase 2: Slack Integration (optional)
# Get your webhook URL from https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# Phase 2: Job Scheduler Configuration (optional)
# Cron expression for weekly review job (default: Every Monday at 9 AM UTC)
# Format: "minute hour day month day_of_week"
# Examples:
#   "0 9 * * 1" - Every Monday at 9 AM UTC
#   "0 18 * * 5" - Every Friday at 6 PM UTC
#   "0 0 1 * *" - First day of every month at midnight
SCHEDULE_CRON_WEEKLY=0 9 * * 1
